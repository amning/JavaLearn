import javax.sound.midi.*;
public class MusicTest1 {

	public void play(){
		try{
			Sequencer player = MidiSystem.getSequencer();
			player.open();
			
			Sequence seq = new Sequence(Sequence.PPQ,4);;
			
			Track track = seq.createTrack();//取得 track
			
			ShortMessage a = new ShortMessage();
			a.setMessage(144,1,44,100);
			MidiEvent noteOn = new MidiEvent(a,1);
			track.add(noteOn);
			
			ShortMessage b = new ShortMessage();
			b.setMessage(128,1,44,100);
			MidiEvent noteOff = new MidiEvent(b,16);
			track.add(noteOff);
			
			player.setSequence(seq);
			
			player.start();
		}catch (Exception ex){
			ex.printStackTrace();
		}
	}
		
	

	public static void main(String[] args){
		
		String test = "no";
		try{
			System.out.print("start try");
			doRisky(test);
			
		System.out.println("We got a sequencer");
		}catch(MidiUnavailableException ex){
			System.out.println("Bummer");//用catch块摆放异常状况的处理程序
		}
	}

}
/*
 * start try - start risky- end risky - end try - finally -end of main
 * start try - start risky - scary exception - finally - end of main
*/